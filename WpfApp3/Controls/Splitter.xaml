                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </RadioButton.Template>
                                        </RadioButton>
                                        <CheckBox
                                            Name="PART_ToDown"
                                            Width="15"
                                            Height="15"
                                            Margin="0,0,2,0"
                                            Background="{TemplateBinding Background}"
                                            Foreground="{TemplateBinding Foreground}"
                                            IsThreeState="False"
                                            RenderTransformOrigin="0.5,0.5">
                                            <CheckBox.Template>
                                                <ControlTemplate TargetType="CheckBox">
