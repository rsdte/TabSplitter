                                                </ControlTemplate>
                                            </RadioButton.Template>
                                        </RadioButton>
                                        <RadioButton
                                            Name="PART_HorizontalMode"
                                            Width="15"
                                            Height="15"
                                            Margin="2,0"
                                            Background="{TemplateBinding Background}"
                                            Foreground="{TemplateBinding Foreground}"
                                            GroupName="ModeGroup"
                                            IsChecked="True">
